@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Crear Slider";
}

<h3 class="text-center">Crear un nuevo slider</h3>
<form method="POST" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-6">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del artículo" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-6">
                        <label asp-for="Estado"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input type="checkbox" asp-for="Estado" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-6">
                        <label asp-for="UrlImagen"></label>
                    </label>
                </div>
                <div class="col-6">
                    <input type="file" name="archivos" id="subidaArchivos" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row text-center">
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
}